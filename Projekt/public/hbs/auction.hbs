<div class="container target">
    <div class="row">
        <div class="col-sm-10">
             <h2 class="">{{auction.name}}</h2>
             {{#if listedType.typeBuyNow}}<strong class="">Price: </strong></span>{{auction.price}} <a href="/auction/{{auction._id}}/buynow" class="btn btn-success">Buy now</a>{{/if}}
             {{#if listedType.typeAuction}}
             <form method="post" action="/auction/{{auction._id}}">
                 <div class="form-group">
                    <input type="text" class="form-control" name="price" value="{{auction.price}}"> <button type="submit" class="btn btn-default">Bid</button>
                </div>
            </form>
             {{/if}}
        </div>
    </div>
  <br>
    <div class="row">
        <div class="col-sm-3">
            <ul class="list-group">
                <li class="list-group-item text-muted" contenteditable="false">Auction details</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Owner</strong></span>{{user.username}}</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Price</strong></span>{{auction.price}}</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Type</strong></span>{{auction.listedType}}</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Listed</strong></span>{{auction.listedTime}}</li>
                <li class="list-group-item text-right"><span class="pull-left"><strong class="">Ending</strong></span>{{auction.end}}</li>
            </ul>
        </div>
        <!--/col-3-->
        <div class="col-sm-9" style="" contenteditable="false">
            <div class="panel panel-default">
                <div class="panel-heading">Auction description</div>
                <div class="panel-body"> {{auction.description}}</div>
            </div>
    </div>
</div>